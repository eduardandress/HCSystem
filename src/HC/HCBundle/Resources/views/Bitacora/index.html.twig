

{% extends 'HCHCBundle::layout.html.twig' %}


{% block content_header %}
  <section class="content-header">
    <h1>
      Bitacora del sistema
      <small>Bitacora de todos los movimientos del sistema</small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="#"><i class="fa fa-dashboard"></i> Bitacora del sistema</a></li>
      <li class="active">Aqui</li>
    </ol>
  </section>

{% endblock %}

{% block content %}
<style >
    .small-btn{
        width:40px;
        height:40px;
        padding:0px;
    }
</style>
            <div class="box">
                    <div class="box-header">
                      <h3 class="box-title">Bit√°cora del sistema</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">

    <table class="table table-condensed">
        <thead>
            <tr>
       {#          <th>Idbitacora</th> #}
                <th>Tabla</th>
                <th>Idtupla</th>
                <th>Descripcion</th>
                <th>Fecha</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                {# <td><a href="{{ path('bitacora_show', { 'id': entity.idbitacora }) }}">{{ entity.idbitacora }}</a></td> #}
                <td>{{ entity.tabla }}</td>
                <td>{{ entity.idtupla }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>{% if entity.fecha %}{{ entity.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
             
                  
                  <a href="{{ path('bitacora_show', { 'id': entity.idbitacora }) }}"class="btn btn-app small-btn"><i class="fa fa-eye"></i>Ver</a>
              </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</div>
<button type="button" class="btn btn-danger">Vaciar bitacora</button>

    {% endblock %}
