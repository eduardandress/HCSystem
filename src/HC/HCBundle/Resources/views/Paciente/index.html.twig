{% extends 'HCHCBundle::layout.html.twig' %}


{% block content_header %}
  <section class="content-header">
    <h1>
      Pacientes
      <small>Últimos 10 Pacientes</small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="#"><i class="fa fa-dashboard"></i> Últimos pacientes</a></li>
      <li class="active">aqui</li>
    </ol>
  </section>

{% endblock %}



{% block content %}
<style >
    .small-btn{
        width:40px;
        height:40px;
        padding:0px;
    }
    .opciones{
        text-align: right;
        margin-bottom: 10px;
        margin-right:10px;
    }
</style>
<div class="opciones">
    <a href="{{ path('paciente_new') }}" class="btn btn-success">
        <i class="fa fa-plus"></i>
         Nuevo paciente
    </a>
</div>

        <div class="box">
                    <div class="box-header">
                      <h3 class="box-title">Pacientes</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">
<table id="Pacientes" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                     <thead>
                                        <tr>
                                          
                                            <th>Cédula</th>
                                            <th>Nombre</th>
                                            <th>Apellido</th>
                                            <!-- <th>Dirección</th> -->
                                            <th>Número seguro social</th>
                                            <th>Fecha de Nacimiento</th>
                                            <th>Médico Preferido</th>
                                
                                            <th style="width:28%; text-align:center">Acciones</th>
                                        </tr>
                                    </thead>
                                       <tfoot>
                                            <tr>
                                                 <th>Cédula</th>
                                            <th>Nombre</th>
                                            <th>Apellido</th>
                                            <!-- <th>Dirección</th> -->
                                            <th>Número seguro social</th>
                                            <th>Fecha de Nacimiento</th>
                                            <th>Médico Preferido</th>
                                
                                            <th style="width:28%; text-align:center">Acciones</th>
                                            </tr>
                                    </tfoot>
                        <tbody>

                                    {% for entity in entities %}
                                    <tr>
                                       
                                        <td>{{ entity.cedula }}</td>
                                        <td>{{ entity.nombre }}</td>
                                        <td>{{ entity.apellido }}</td>
                                        <!-- <td>{{ entity.direccion }}</td> -->
                                        <td>{{ entity.numss }}</td>
                                        <td>{{ entity.fechanac }}</td>
                                        <td>{{ entity.idmedicopref.nombre }}</td>
                                    
                      
                                        <td>
                                            
                                                    <a href="{{ path('paciente_show', { 'id': entity.idpaciente }) }}" class="btn btn-app small-btn"><i class="fa fa-eye"></i>Ver</a>
                                              
                                                    <a href="{{ path('paciente_edit', { 'id': entity.idpaciente }) }}" class="btn btn-app small-btn"> <i class="fa fa-edit"></i>Editar</a>
                                              
                                        </td>
                                    </tr>
                                    {% endfor %}
                        </tbody>
                    </table>
                    </div><!-- /.box-body -->
                    <div class="box-footer clearfix">
                      <ul class="pagination pagination-sm no-margin pull-right">
                        <li><a href="#">«</a></li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">»</a></li>
                      </ul>
                    </div>
        </div>
  

       

           
     
    {% endblock %}
{% block javascripts -%}
    {{ parent() }}


    <script type="text/javascript">
        $(document).ready(function(){

            $("#Pacientes").dataTable();
        })
    </script>


   
{% endblock %}