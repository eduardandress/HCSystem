{% extends 'HCHCBundle::layout.html.twig' %}


{% block content_header %}
  <section class="content-header">
    <h1>
      Gestionar Usuarios
      <small>Últimos 10 nuevos usuarios</small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="#"><i class="fa fa-dashboard"></i> Gestionar Usuarios</a></li>
      <li class="active">aqui</li>
    </ol>
  </section>

{% endblock %}
{% block content %}

<style>
    .small-btn{
        width: 40px;
        height: 40px;
        padding:0px;
    }
    .opciones{
        text-align: right;
        margin-bottom: 10px;
        margin-right:10px;
    }
</style>

<div class="opciones">
    <a href="{{ path('gestionarusuarios_new') }}" class="btn btn-success">
        <i class="fa fa-plus"></i>
         Nuevo usuario
    </a>
</div>
<div class="box">
        
    <div class="box-header">
      <h3 class="box-title">Usuarios</h3>
    </div>
    <div class="box-body">
     
<table id="UsuariosT" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                   <th>Usuario</th>
                    <th>Nombre</th>
                    <th>Número de seguro social</th>
                    <th>Teléfono</th>
                    <th>Fecha de inicio</th>
                    <th style="width:28%; text-align:center">Acciones</th>
            </tr>
        </thead>
 
        <tfoot>
            <tr>
                <th>Usuario</th>
                    <th>Nombre</th>
                    <th>Número de seguro social</th>
                    <th>Teléfono</th>
                    <th>Fecha de inicio</th>
                    <th style="width:28%; text-align:center">Acciones</th>
            </tr>
        </tfoot>
 
        <tbody>

         {% for entity in entities %}
                    <tr>
            
                        <td>{{ entity.usuario }}</td>
                        <td>{{ entity.nombre }}</td>
                        <td>{{ entity.numss }}</td>
                        <td>{{ entity.telefono }}</td>
                        <td>{% if entity.fechainicio %}{{ entity.fechainicio|date('Y-m-d') }}{% endif %}</td>
                        <td>
                       


                            <a href="{{ path('gestionarusuarios_show', { 'id': entity.idusuario }) }}" class="btn btn-app small-btn">
                                <i class="fa fa-eye"></i> Ver
                            </a>
                                
                                 
                         
                                        
                            <a href="{{ path('gestionarusuarios_edit', { 'id': entity.idusuario }) }}" class="btn btn-app small-btn" ><i class="fa fa-edit"></i>Editar</a>
                       
                        </td>
                    </tr>
                {% endfor %}

        </tbody>
</table>
    </div>
</div>

      
{% endblock %}
{% block javascripts -%}
    {{ parent() }}


    {% javascripts

    'bundles/hchc/js/basics.js'
  
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>

    <script type="text/javascript">
        $(document).ready(function(){

            $("#UsuariosT").dataTable(DataLanguage);
        })
    </script>


    {% endjavascripts %}
{% endblock %}
