                                    <th>Nombre completo</th>
                                    <td>{{ entity.nombre }}</td>
                                </tr>
                                <tr>
                                    <th>Fecha de nacimiento</th>
                                    <td>{{ entity.fechanac|date('Y-m-d H:i:s') }}</td>
                                </tr>
                                <tr>
                                    <th>Número de seguro social</th>
                                    <td>{{ entity.numss }}</td>
                                </tr>
                                <tr>
                                    <th>Dirección</th>
                                    <td>{{ entity.direccion }}</td>
                                </tr>
                                <tr>
                                    <th>Teléfono</th>
                                    <td>{{ entity.telefono }}</td>
                                </tr>
                                <tr>
                                    <th>Fecha de inicio</th>
                                    <td>{{ entity.fechainicio|date('Y-m-d H:i:s') }}</td>
                                </tr>
                            </tbody>
                     </table>
            </div><!-- /.box-body -->
        </div>
       
