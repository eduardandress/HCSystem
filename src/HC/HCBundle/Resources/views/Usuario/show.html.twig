{% endblock %}



{% block content %}

<div class="box">
            <div class="box-header">
                <h3 class="box-title">Detalle del usuario</h3>
                    </div><!-- /.box-header -->
                        <div class="box-body no-padding">
                          <table class="table table-condensed">
                            <tbody>
                                <tr>
                                    <th> Nombre de usuario</th>
                                    <td>{{ entity.usuario }}</td>
                                </tr>
                               <!--  <tr>
                                    <th>Clave</th>
                                    <td>{{ entity.clave }}</td>
                                </tr> -->
